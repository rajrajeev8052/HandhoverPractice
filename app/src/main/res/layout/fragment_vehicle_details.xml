<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VehicleDetailsFragment">



      <androidx.core.widget.NestedScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent">


      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_Vehicledetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_arrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="23dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/group_33831"/>

        <TextView
            android:id="@+id/txt_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            android:textStyle="bold"
            android:textColor="@color/blacks"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_marginStart="10.65dp"
            app:layout_constraintTop_toTopOf="@+id/img_arrowback"
            app:layout_constraintBottom_toBottomOf="@id/img_arrowback"
            app:layout_constraintStart_toEndOf="@id/img_arrowback"/>



        <ImageView
            android:id="@+id/img_help"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:src="@drawable/vector__20_"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="@id/txt_vehicle"
            app:layout_constraintBottom_toBottomOf="@id/txt_vehicle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textStyle="bold"
            android:textColor="#0F6FB5"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="@id/img_help"
            app:layout_constraintBottom_toBottomOf="@id/img_help"
            app:layout_constraintStart_toEndOf="@id/img_help"/>

         <ImageView
             android:id="@+id/img_splender"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/pngegg__1__1"
             android:layout_marginHorizontal="17dp"
             app:layout_constraintTop_toBottomOf="@id/txt_vehicle"/>


          <TextView
              android:id="@+id/txt_herosplender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Hero Splender+"
              android:textAllCaps="false"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="#FA713F"
              android:layout_marginTop="23dp"
              android:layout_marginStart="15sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/img_splender"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Abhishekâ€™s Bike"
              android:textStyle="bold"
              android:textSize="16sp"
              android:textAllCaps="false"
              android:textColor="#686868"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginBottom="18dp"
              app:layout_constraintTop_toBottomOf="@id/txt_herosplender"
              app:layout_constraintStart_toStartOf="@id/txt_herosplender"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/constraintLayout_Vehicledetails"
          >


          <TextView
              android:id="@+id/txt_Manufacture"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Manufacture"
              android:textAllCaps="false"
              android:textColor="#000000"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginTop="25dp"
              android:layout_marginStart="22dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

              <TextView
                  android:id="@+id/txt_hero"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Hero"
                  android:textStyle="bold"
                  android:textSize="16sp"
                  android:textAllCaps="false"
                  android:textColor="#686868"
                  app:layout_constraintTop_toBottomOf="@id/txt_Manufacture"
                  app:layout_constraintStart_toStartOf="@id/txt_Manufacture"/>

          <TextView
              android:id="@+id/txt_fuletype"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Fuel Type"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginEnd="83dp"
              app:layout_constraintTop_toTopOf="@id/txt_Manufacture"
              app:layout_constraintBottom_toBottomOf="@id/txt_Manufacture"
              app:layout_constraintEnd_toEndOf="parent"/>

             <TextView
                 android:id="@+id/txt_petrol"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Petrol"
                 android:textStyle="bold"
                 android:textSize="14sp"
                 android:textAllCaps="false"
                 android:textColor="#686868"
                 app:layout_constraintStart_toStartOf="@id/txt_fuletype"
                 app:layout_constraintTop_toBottomOf="@id/txt_fuletype"/>

          <TextView
              android:id="@+id/txt_modal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Model"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginTop="14dp"
              app:layout_constraintTop_toBottomOf="@id/txt_hero"
              app:layout_constraintStart_toStartOf="@id/txt_hero"
              />

          <TextView
              android:id="@+id/txt_splender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Splender"
              android:textStyle="bold"
              android:textSize="14sp"
              android:textAllCaps="false"
              android:textColor="#686868"
              app:layout_constraintStart_toStartOf="@id/txt_modal"
              app:layout_constraintTop_toBottomOf="@id/txt_modal"/>

          <TextView
              android:id="@+id/txt_Year"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Year"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="@id/txt_modal"
              app:layout_constraintBottom_toBottomOf="@id/txt_modal"
              app:layout_constraintStart_toStartOf="@id/txt_petrol"/>


          <TextView
              android:id="@+id/txt_2017"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2017"
              android:textStyle="bold"
              android:textSize="14sp"
              android:textAllCaps="false"
              android:textColor="#686868"
              app:layout_constraintStart_toStartOf="@id/txt_Year"
              app:layout_constraintTop_toBottomOf="@id/txt_Year"/>

          <TextView
              android:id="@+id/txt_VehicleType"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Vehicle Type"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginTop="14dp"
              app:layout_constraintTop_toBottomOf="@id/txt_splender"
              app:layout_constraintStart_toStartOf="@id/txt_splender"
              />

          <TextView
              android:id="@+id/txt_vehicleHero"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Hero"
              android:textStyle="bold"
              android:textSize="14sp"
              android:textAllCaps="false"
              android:textColor="#686868"
              app:layout_constraintStart_toStartOf="@id/txt_VehicleType"
              app:layout_constraintTop_toBottomOf="@id/txt_VehicleType"/>

          <TextView
              android:id="@+id/txt_SeatCapacity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Seat Capacity"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintBottom_toBottomOf="@id/txt_VehicleType"
              app:layout_constraintTop_toTopOf="@id/txt_VehicleType"
              app:layout_constraintStart_toStartOf="@id/txt_2017"/>


          <TextView
              android:id="@+id/txt_one1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1"
              android:textStyle="bold"
              android:textSize="14sp"
              android:textAllCaps="false"
              android:textColor="#686868"
              app:layout_constraintStart_toStartOf="@id/txt_SeatCapacity"
              app:layout_constraintTop_toBottomOf="@id/txt_SeatCapacity"/>


            <View
                android:id="@+id/view_splender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/txt_vehicleHero"
                android:background="#F1F1F1"
                android:layout_marginTop="23dp"
                android:layout_marginHorizontal="22dp"/>

             <ImageView
                 android:id="@+id/img_error"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/group_33696"
                 android:layout_marginTop="22dp"
                 app:layout_constraintTop_toBottomOf="@id/view_splender"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="22dp"/>

            <TextView
                android:id="@+id/txt_Applicable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#0F6FB5"
                android:layout_marginStart="12dp"
                android:text="Applicable for Food, Grocery and small \nPackage Deliveries."
                app:layout_constraintTop_toTopOf="@id/img_error"
                app:layout_constraintStart_toEndOf="@id/img_error"/>

             <androidx.appcompat.widget.AppCompatButton
                 android:id="@+id/button_checkhelth"
                 android:layout_width="wrap_content"
                 android:layout_height="35dp"
                 android:background="@drawable/checkhealth"
                 android:text="Check Health"
                 android:textColor="@color/black"
                 android:textAllCaps="false"
                 android:textSize="14sp"
                 android:textStyle="bold"
                 android:layout_marginTop="86dp"
                 android:paddingHorizontal="40dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/txt_Applicable"/>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginTop="21dp"
               android:background="@drawable/gettingstart"
               android:layout_marginHorizontal="17dp"
               android:layout_marginBottom="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toBottomOf="@id/button_checkhelth">

              <TextView
                  android:id="@+id/txt_changevechicle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Change Vehicle"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:textAllCaps="false"
                  android:textColor="@color/white"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/vector__16_"
                   app:layout_constraintStart_toEndOf="@id/txt_changevechicle"
                   app:layout_constraintTop_toTopOf="@id/txt_changevechicle"
                   app:layout_constraintBottom_toBottomOf="@id/txt_changevechicle"
                   android:layout_marginStart="7dp"/>


           </androidx.constraintlayout.widget.ConstraintLayout>



      </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>