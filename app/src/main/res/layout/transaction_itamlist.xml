            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txt_cancellationFare"
            app:layout_constraintTop_toTopOf="@id/txt_cancellationFare"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector__7_"
            android:layout_marginEnd="17.08dp"
            app:layout_constraintTop_toTopOf="@id/txt_time"
            app:layout_constraintBottom_toBottomOf="@id/txt_time"
