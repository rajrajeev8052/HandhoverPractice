            app:layout_constraintTop_toBottomOf="@+id/txt_cancellationFare"/>

        <TextView
            android:id="@+id/txt_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancellation Fare for 12:13 PM order"
