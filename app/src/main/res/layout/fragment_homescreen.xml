<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_gradiant_background"
    tools:context=".homescreenFragment">


      <TextView
          android:id="@+id/txt_skip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Skip"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textAllCaps="false"
          android:fontFamily="@font/poppins_regular"
          android:layout_marginTop="@dimen/_30sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/_9119019_arrows_around_wallet_with_money_3d_cartoon_style_icon__converted__1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_17sdp"
        app:layout_constraintTop_toBottomOf="@+id/txt_skip" />


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/group_34059"
           android:paddingVertical="@dimen/_30sdp"
           app:layout_constraintBottom_toBottomOf="parent">


           <TextView
               android:id="@+id/txt_No_Monthly"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_20sdp"
               android:gravity="center"
               android:padding="0dp"
               android:text="@string/splash_screen"
               android:textAllCaps="false"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.497"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/app_button_next"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/next_button"
               android:text="Next"
               android:textAllCaps="false"
               android:textSize="15sp"
               android:textColor="@color/white"
               android:textAlignment="center"
               app:layout_constraintTop_toBottomOf="@+id/txt_No_Monthly"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginHorizontal="@dimen/_15sdp"/>


       </androidx.constraintlayout.widget.ConstraintLayout>






       </androidx.constraintlayout.widget.ConstraintLayout>