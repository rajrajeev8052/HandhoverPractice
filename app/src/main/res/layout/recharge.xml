<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/conslayout_searchview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingVertical="@dimen/_15sdp"
         android:background="@drawable/search_view"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_marginTop="@dimen/_50sdp"
         android:layout_marginHorizontal="@dimen/_20sdp">


      <ImageView
          android:id="@+id/img_searchview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/vector__19_"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:paddingHorizontal="@dimen/_12sdp"/>

         <EditText
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Search new location"
             android:background="#F9F9F9"
             android:textSize="10sp"
             android:textStyle="bold"
             android:textAllCaps="false"
             android:textColorHint="@color/black"
             app:layout_constraintTop_toTopOf="@id/img_searchview"
             app:layout_constraintBottom_toBottomOf="@id/img_searchview"
             app:layout_constraintStart_toEndOf="@id/img_searchview"/>

     </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/edit_button"
        android:text="Edit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0F6FB5"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conslayout_searchview" />


</androidx.constraintlayout.widget.ConstraintLayout>