<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PANVerificationFragment">



    <ImageView
        android:id="@+id/img_arrowback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector__18_"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


      <TextView
          android:id="@+id/txt_panverification"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="PAN Verification"
          android:textAllCaps="false"
          android:textSize="26sp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:layout_marginTop="@dimen/_20sdp"
          android:layout_marginStart="@dimen/_28sdp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/img_arrowback"
         />


    <TextView
        android:id="@+id/txt_entername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="Enter Name"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/txt_panverification"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_firstnamedl"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/panverification"
        app:layout_constraintTop_toBottomOf="@+id/txt_entername"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_9sdp">

     <EditText
         android:id="@+id/firstname"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:hint="First name as per DL"
         android:textColorHint="#676767"
         android:textSize="14sp"
         android:background="#F1F1F1"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:paddingHorizontal="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Pan Number"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf=""/>




</androidx.constraintlayout.widget.ConstraintLayout>