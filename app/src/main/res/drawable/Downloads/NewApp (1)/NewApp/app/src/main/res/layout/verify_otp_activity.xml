<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTP"
    android:orientation="vertical"
    android:background="@drawable/newapplogin">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="@color/white"
        android:id="@+id/toolbar"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:clickable="true"
        android:title="Verify OTP"
        android:titleMarginStart="70dp"
        android:titleMarginEnd="70dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your OTP"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/input_1"
            android:background="@drawable/editbox"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="1"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/input_2"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:background="@drawable/editbox"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/input_3"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:background="@drawable/editbox"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/input_4"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:background="@drawable/editbox"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Done"
        android:id="@+id/doneBtn"
        android:layout_gravity="center"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:paddingStart="10dp"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>


</LinearLayout>