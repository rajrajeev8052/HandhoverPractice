<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatePicker"
    android:orientation="vertical"
    android:background="@drawable/newapplogin">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="@color/white"
        android:id="@+id/toolbar"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:clickable="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your birthday"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your birthday wasn't bo shown publicly"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Edit_datepicker"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_picker"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_gravity="center"
        android:calendarTextColor="@color/white"
        android:theme="@style/datePicker"
        android:touchscreenBlocksFocus="true"
        android:backgroundTint="@color/white"
        android:focusableInTouchMode="true"
        android:contextClickable="true"
        android:outlineSpotShadowColor="@color/white"
        android:background="@drawable/datebackground"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Next"
        android:id="@+id/next_btn"
        android:layout_gravity="center"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:paddingStart="10dp"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"/>

</LinearLayout>