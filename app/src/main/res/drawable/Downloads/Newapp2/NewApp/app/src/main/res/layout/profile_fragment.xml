            android:drawableTint="#048073"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="10dp"
            /><View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCCCC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share to get Coins"
            android:textStyle="bold"
            android:drawableStart="@drawable/share"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="10dp"
            /><View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCCCC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Level"
            android:textStyle="bold"
            android:drawableStart="@drawable/promotions"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="10dp"
            /><View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCCCC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/ic_baseline_card_giftcard_24"
            android:drawablePadding="10dp"
            android:drawableTint="#048073"
            android:text="Special card"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" /><View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCCCC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
